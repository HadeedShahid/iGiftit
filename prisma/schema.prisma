// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    password String
    username String
    addresses String
    cart Cart?
}
model Cart{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  items String
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId
}
model Order{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    userEmail String @unique
    status String 
    amount String
    date String
    items String
}
model Products{
   id String @id @default(auto()) @map("_id") @db.ObjectId
   name String
   description String
   long_description String
   seller String
   price Float
   colors Json?
   images Json
   size Json?
}
model Reminders{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userEmail String @unique
  date String
  message String
}